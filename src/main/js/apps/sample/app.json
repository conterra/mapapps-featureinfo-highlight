{
    "properties": {
        "title": "${apptitle}"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system",
            "splashscreen",
            "templatelayout",
            "template-seasons",
            "theme-everlasting",
            "toolset",
            "map-init",
            "map-preload-2D",
            "mapnavigation",
            "banner",
            "popups-default",
            "popups",
            "toc",
            "dn_featureinfohighlight"
        ],
        "require": [
            "${app}/app"
        ],
        "i18n": [
            "bundle"
        ]
    },
    "bundles": {
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "imagePosition": "above",
                "image": "resource('${app}:/images/logo_conterra.png')",
                "imageWidth": 200,
                "link": "https://developernetwork.conterra.de"
            }
        },
        "dn_featureinfohighlight": {
            "DrawGeometryHandler": {
                "pointSymbol": {
                    "type": "simple-marker",
                    "style": "circle",
                    "size": 12,
                    "color": [
                        0,
                        255,
                        255,
                        0.25
                    ],
                    "outline": {
                        "style": "solid",
                        "width": 2,
                        "color": [
                            0,
                            255,
                            255,
                            1
                        ]
                    }
                },
                "polylineSymbol": {
                    "type": "simple-line",
                    "style": "solid",
                    "width": 2,
                    "color": [
                        0,
                        255,
                        255,
                        1
                    ]
                },
                "polygonSymbol": {
                    "type": "simple-fill",
                    "style": "solid",
                    "color": [
                        0,
                        255,
                        255,
                        0.25
                    ],
                    "outline": {
                        "width": 2,
                        "style": "solid",
                        "color": [
                            0,
                            255,
                            255,
                            1
                        ]
                    }
                }
            }
        },
        "map-init": {
            "Config": {
                "basemaps": [
                    {
                        "id": "streets",
                        "basemap": "streets-vector",
                        "title": "Strassen",
                        "selected": true
                    },
                    {
                        "id": "satellite",
                        "basemap": "satellite",
                        "title": "Satellit"
                    },
                    {
                        "id": "hybrid",
                        "basemap": "hybrid",
                        "title": "Hybrid"
                    }
                ],
                "map": {
                    "layers": [
                        {
                            "id": "stoerungen",
                            "title": "St√∂rungen",
                            "type": "AGS_FEATURE",
                            "url": "https://services.conterra.de/arcgis/rest/services/mapapps/stoerung/FeatureServer/1"
                        },
                        {
                            "id": "airtraffic",
                            "title": "Airtraffic",
                            "type": "AGS_DYNAMIC",
                            "url": "https://services.conterra.de/arcgis/rest/services/mapapps/airtraffic/MapServer",
                            "sublayers": [
                                {
                                    "id": 0
                                },
                                {
                                    "id": 1
                                }
                            ]
                        },
                        {
                            "id": "grenzen_mapserver",
                            "title": "Grenzen",
                            "type": "AGS_DYNAMIC",
                            "url": "https://services.conterra.de/arcgis/rest/services/common/grenzen/MapServer",
                            "sublayers": [
                                {
                                    "id": "0",
                                    "visible": false
                                },
                                {
                                    "id": "1",
                                    "visible": false
                                },
                                {
                                    "id": "2"
                                },
                                {
                                    "id": "3",
                                    "visible": false
                                }
                            ]
                        }
                    ]
                },
                "view": {
                    "viewmode": "2D",
                    "extent": {
                        "xmin": 600000,
                        "ymin": 5800000,
                        "xmax": 1700000,
                        "ymax": 7600000,
                        "spatialReference": 3857
                    }
                }
            }
        },
        "popups": {
            "Config": {
                "defaultPopupType": "default",
                "defaultPopupEnabled": true,
                "highlightEnabled": true
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "mapview_tools",
                        "tools": [
                            "zoomInTool",
                            "zoomOutTool",
                            "compassTool",
                            "restoreInitialViewTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "mapview_tools"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    }
                ]
            }
        }
    }
}
