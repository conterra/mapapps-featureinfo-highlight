{
    "properties": {
        "title": "${apptitle}"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system@^4.5.0",
            "splashscreen@^4.5.0",
            "templatelayout@^4.5.0",
            "template-seasons@^4.5.0",
            "theme-everlasting@^4.5.0",
            "toolset@^4.5.0",
            "map-init@^4.5.0",
            "banner",
            "popups-default",
            "popups",
            "dn_featureinfohighlight",
            "console"
        ],
        "require": [
            "${app}/app"
        ],
        "i18n": [
            "bundle"
        ]
    },
    "bundles": {
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "image": "https://www.conterra.de/~/media/conterra/images/site_logos/conterra-logo.ashx",
                "imagePosition": "above",
                "link": "http://developernetwork.conterra.de"
            }
        },
        "dn_featureinfohighlight": {
            "DrawGeometryHandler": {
                "polygonStyle": {
                    "color": [0, 255, 255, 0.25],
                    "style": "solid",
                    "outline": {
                        "color": [0, 0, 0, 1],
                        "width": 0.2,
                        "style": "solid"
                    }
                },
                "pointStyle": {
                    "color": [0, 255, 255, 0.25 ],
                    "angle": 0,
                    "xoffset": 0,
                    "yoffset": 0,
                    "size": 12,
                    "style": "circle",
                    "outline": {
                        "color": [0, 0, 0, 1],
                        "width": 0.75,
                        "style": "solid"
                    }
                },
                "polylineStyle": {
                    "color": [0, 255, 255, 1],
                    "style": "solid",
                    "width": 0.75
                }
            }
        },
        "map-init": {
            "Config": {
                "basemaps": [
                    {
                        "id": "streets",
                        "basemap": "streets",
                        "title": "Strassen",
                        "selected": true
                    },
                    {
                        "id": "satellite",
                        "basemap": "satellite",
                        "title": "Satellit"
                    },
                    {
                        "id": "hybrid",
                        "basemap": "hybrid",
                        "title": "Hybrid"
                    }
                ],
                "map": {
                    "layers": [
                        {
                            "id": "airtraffic",
                            "type": "AGS_DYNAMIC",
                            "url": "https://services.conterra.de/arcgis/rest/services/mapapps/airtraffic/MapServer",
                            "sublayers": [
                                {
                                    "id": 0
                                },
                                {
                                    "id": 1
                                }
                            ]
                        },
                        {
                            "title": "baum",
                            "type": "AGS_FEATURE",
                            "url": " https://services.conterra.de/arcgis/rest/services/mapapps/Baumkataster_Zustand/FeatureServer/0"
                        },
                        {
                            "title": "borders",
                            "type": "AGS_DYNAMIC",
                            "url": "https://services.conterra.de/arcgis/rest/services/common/grenzen/MapServer",
                            "sublayers": [
                                {
                                    "id": "1"
                                }
                            ]
                        }
                    ]
                },
                "view": {
                    "viewmode": "2D",
                    "extent": {
                        "xmin": 600000,
                        "ymin": 5800000,
                        "xmax": 1700000,
                        "ymax": 7600000,
                        "spatialReference": 3857
                    }
                }
            }
        },
        "popups": {
            "Config": {
                "defaultPopupType": "default",
                "defaultPopupEnabled": true,
                "highlightEnabled": true
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "defaultToolSet",
                        "tools": [
                            "*"
                        ],
                        "registerWidget": {
                            "widgetRole": "map_topleft"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    }
                ]
            }
        }
    }
}
